<div class="{{styles.container}}">
  <h1 class="{{styles.title}}">{{title}}</h1>
  <form class="{{styles.form}}" id="{{formId}}">
    {{#each settings}}
      {{> Input
        id=id
        name=name
        label=label
        labelClass=(lookup ../styles 'label')
        placeholder=placeholder
        type=type
        required=required
        inputClass=(lookup ../styles 'input')
        error=error
        errorClass=(lookup ../styles 'error')
      }}
    {{/each}}

    {{> Button id=buttonId text=buttonText type="submit" class=styles.button }}
  </form>
  <a id="{{linkId}}" href="{{linkHref}}" class="{{styles.link}}">{{linkText}}</a>
</div>
